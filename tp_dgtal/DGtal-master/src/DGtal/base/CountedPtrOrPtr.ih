// ----------------------- Standard services ------------------------------


///////////////////////////////////////////////////////////////////////////////
// Interface - public :

/**
 * Writes/Displays the object on an output stream.
 * @param out the output stream where the object is written.
 */
template <typename T>
inline
void
DGtal::CountedPtrOrPtr<T>::selfDisplay ( std::ostream & out ) const
{
  if (isValid()) {
    if ( myIsCountedPtr )
      out << "[CountedPtrOrPtr nbcounts =" << counterPtr()->count << "]";
    else 
      out << "[CountedPtrOrPtr is ptr at " << ptr() << "]";
  }
  else
    out << "[CountedPtrOrPtr to NULL]";
}

/**
 * Checks the validity/consistency of the object.
 * @return 'true' if the object is valid, 'false' otherwise.
 */
template <typename T>
inline
bool
DGtal::CountedPtrOrPtr<T>::isValid() const
{
  return myAny != 0;
}



///////////////////////////////////////////////////////////////////////////////
// Implementation of inline functions                                        //

template <typename T>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out,
      const CountedPtrOrPtr<T> & object )
{
  object.selfDisplay( out );
  return out;
}

